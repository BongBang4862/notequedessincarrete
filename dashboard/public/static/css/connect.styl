body,html
		font-family: 'Roboto', sans-serif;
		margin 0px
		font-size 14px
		padding 0px

body
	background-color #f9f9f9

.transition
	-webkit -transition all 0.3s ease
	transition all 0.3s ease

label
	display block

.mtop16
	margin-top 16px !important

.shadow
		box-shadow: 1px 7px 17px 0px rgba(0,0,0,0.1);
		-webkit-box-shadow: 1px 7px 17px 0px rgba(0,0,0,0.1);
		-moz-box-shadow: 1px 7px 17px 0px rgba(0,0,0,0.1);

.page
	display flex
	height 100vh
	width 100%
	align-items center
	justify-content center
	box-sizing border-box
	background linear-gradient(270deg, #f7bc30, #e1a009, #eaca7e)
	background-size 600% 600%
	-webkit-animation AnimationName 16s ease infinite
	-moz-animation AnimationName 16s ease infinite
	animation AnimationName 16s ease infinite
	.box
		background-color #ffffff
		padding 32px
		width 480px
		border-bottom 4px solid #e1a10b
		border-radius 4px
		.logo
			display block
			margin-bottom 16px
			width 100%
			img
				display block
				margin 0px auto
				width 30%
				border-radius 4%
		h2.title
			margin 0px
			padding 0px
			font-weight 500
			text-align center
			font-size 1.5em
			display block
			color #2c2c2c
		.group
			position relative
			width 100%
			input
				border 1px solid #cccccc
				border-radius 4px
				box-sizing border-box
				display block
				padding 16px
				padding-left 48px
				width 100%
				&:focus
					outline none
			i
				color #2c2c2c
				position absolute
				font-size 1.4em
				top 13px
				left 18px
				z-index 1
		.btn
			display block
			background-color #e1a10b
			border 1px solid #e1a10b
			color #ffffff
			padding 12px
			width 100%
			font-weight 500
			border-radius 4px
			&:hover
					background-color #ffffff
					color #e1a10b

.page_app
		background-color #ffffff
		.box
			background-color transparent
			border-bottom 0px !important
			width 100% !important
			.logo
				img
					width 50% !important
			h2.title
				color #ffffff
			label
				color #ffffff !important
			.group
				input
					border 0px !important
			.btn
				background-color #f2920d


@-webkit-keyframes AnimationName {
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}
}
@-moz-keyframes AnimationName {
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}
}
@keyframes AnimationName {
    0%{background-position:0% 50%}
    50%{background-position:100% 50%}
    100%{background-position:0% 50%}
}
